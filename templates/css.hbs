@font-face {
    font-family: "{{ fontName }}";
    src: {{{ src }}};
}

{{ baseTag }} {
    line-height: 1;
}

{{ baseTag }}[class~="bhi-"]:before {
    font-family: {{fontName}} !important;
    font-style: normal;
    font-weight: normal !important;
    vertical-align: middle;
    speak: none;
    -webkit-font-smoothing: antialiased;
}

{{# each codepoints }}
.{{ ../classPrefix }}{{ @key }}:before {
    content: "\\{{ this }}";
}
{{/ each }}